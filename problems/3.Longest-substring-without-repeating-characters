class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int maxlength = 0;
        int thelength = 0;
        unordered_map<char, int> mp;
        for(int i = 0; i != s.size(); i++){
            if(mp[s[i]] == 0){
                thelength++;
                mp[s[i]] = i + 1;
            }
            else{
                thelength > maxlength ? maxlength = thelength : 1;
                for(int j = i - thelength; j != mp[s[i]] - 1; j++){
                    mp.erase(s[j]);
                }
                thelength = i - mp[s[i]] + 1;
                mp[s[i]] = i + 1;
            }
        }
        thelength > maxlength ? maxlength = thelength : 1;
        return maxlength;
    }
};
